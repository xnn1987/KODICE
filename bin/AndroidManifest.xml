<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aretha.slidemenudemo"
    android:versionCode="4"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="DemoBundleActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuAttributeActivity"
            android:label="@string/slidemenu_attribute" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuCallbackActivity"
            android:label="@string/slidemenu_callback" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuWithHorizontalScrollView"
            android:label="@string/slidemenu_with_horizontal_scroll_view" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuWithViewPager"
            android:label="@string/slidemenu_with_view_pager" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuWithWebView"
            android:label="@string/slidemenu_with_web_view" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SlideMenuWithHorizontalScrollViewAndViewPager"
            android:label="@string/slidemenu_with_horizontal_scroll_view_and_view_pager" >
            <intent-filter>
                <action android:name="com.aretha.demobundle.DEMO" />
            </intent-filter>
        </activity>
    </application>

</manifest>